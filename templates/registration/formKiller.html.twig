{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}| Form killer
{% endblock %}

{% block body %}
	<div class="container register-page">
		<h1 class="text-center my-5">Form killer</h1>
		<div class="card register-card">
			<a href="{{ path('app_login') }}" class="btn btn-lg btn-light">Back</a>
			<div class="form-register">
				{{ form_start(registrationKillerForm) }}
				<div class="form-group">
					{{ form_row(registrationKillerForm.avatar) }}
					{{ form_row(registrationKillerForm.skills) }}
					{{ form_row(registrationKillerForm.biography) }}
					<button type="submit" class="btn btn-lg btn-outline-light my-5">Register</button>
				</div>
				{{ form_end(registrationKillerForm) }}
			</div>
		</div>
	</div>
{% endblock %}
