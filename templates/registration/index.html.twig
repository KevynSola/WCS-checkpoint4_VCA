{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}| Register User
{% endblock %}

{% block body %}
	<div class="container register-page">
		<h1 class="text-center my-5">Register</h1>
		<div class="card register-card">
			<a href="{{path('app_login')}}" class="btn btn-lg btn-outline-bloodlight btn-back d-flex justify-content-between align-items-center">
				<div class="bck">
					<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-arrow-left" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
					</svg>
					<span>Back</span>
				</div>
				<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-x-lg" viewbox="0 0 16 16">
					<path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
				</svg>
			</a>
			<div class="form-register">
				{{ form_start(registrationForm) }}
				<div class="form-group">
					{{ form_row(registrationForm.username) }}
					{{ form_row(registrationForm.plainPassword) }}
					{{ form_row(registrationForm.roles) }}
					<button type="submit" class="btn btn-lg btn-outline-light my-5">Register</button>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
