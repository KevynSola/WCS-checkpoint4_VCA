{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}| Choose Target
{% endblock %}

{% block body %}
	<section>
		<div class="container target-page">
			<h1 class="text-center my-5">Choose your Target</h1>
			<div class="card target-card pb-3">
				<a href="{{path('app_choice')}}" class="btn btn-lg btn-outline-bloodlight btn-back d-flex justify-content-between align-items-center">
					<div class="bck">
						<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-arrow-left" viewbox="0 0 16 16">
							<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
						</svg>
						<span>Back</span>
					</div>
					<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-x-lg" viewbox="0 0 16 16">
						<path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
					</svg>
				</a>
				<div class="row">
					<div class="col-md-6">
						<h2 class="h2 mt-3 text-center">
							<u>Your killer</u>
						</h2>
						<h3 class="h3 display-3 m-4 text-center">
							{% if killer.user is empty %}
								{{killer.id}}
							{% else %}
								{{killer.user.username}}
							{% endif %}
						</h3>
						<img src="{{vich_uploader_asset(killer)}}" class="img-card-killer" alt="{{killer.avatar}}">
						<div class="skills-bloc">
							{% for skill in killer.skills %}
								<p class="badge bg-bloodlight fs-4 my-3">{{skill}}</p>
							{% endfor %}
						</div>
						<p class="bio-killer">{{killer.biography}}</p>
					</div>
					<div class="col-md-6">
						<div class="form-target">
							<h2 class="h2 mt-3 text-center">
								<u>Your target</u>
							</h2>
							{{ form_start(targetForm) }}
							<div class="form-group">
								{{ form_row(targetForm.lastname) }}
								{{ form_row(targetForm.firstname) }}
								{{ form_row(targetForm.city) }}
								{{ form_row(targetForm.posterFile) }}
								<div class="d-none">
									{{ form_row(targetForm.isKilled) }}
								</div>
								<button type="submit" class="btn btn-lg btn-bloodlight btn-kill my-5">Kill</button>
							</div>
							{{ form_end(targetForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
