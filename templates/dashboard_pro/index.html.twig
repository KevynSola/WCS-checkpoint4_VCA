{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}| Dashboard
{% endblock %}

{% block body %}
	<div class="container">

		<h1>Dashboard of
			{{killer.user.username}}
		</h1>
		<div class="card text-dark">
			<div class="row">
				{% if killer.avatar is empty %}
					<p>You're not Avatar ?</p>
					<a href="#">Complete your profile</a>
				{% endif %}
				{{killer.avatar}}
				{% for skill in killer.skills %}
					{{skill}}
				{% endfor %}
				{{killer.biography}}
				{% for target in killer.targets %}
					<div class="col-4">
						{{target.firstname}}
						{{target.lastname}}
						{{target.poster}}
						{{target.city}}
						<span>User:
							{{target.user.username}}
						</span>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
